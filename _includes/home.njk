---
layout: base.njk
---

<style>
  .hero-banner img {
  width: 100%;
  height: 200px !important;
  object-fit: cover;
}
</style>
<div class="w3-container  w3-padding-16 w3-light-grey">
  <div class="w3-container w3-padding-32">
    <h2 class="w3-center">Welcome to My Blog</h2>
    <p class="w3-center">Exploring design, tech, and creativity.</p>
  </div>
  {%- for post in collections.posts -%}
    <!-- post centent -->
    <div class="w3-border w3-border-sunset-orange w3-round w3-margin-top">
      <!-- Image header -->
      <div class="w3-display-container  w3-border-bottom w3-border-sunset-orange">
        {% if post.data.image %}
        <a href="{{ post.page.url }}"><div class="hero-banner">
        <img src="{{post.data.image}}" alt="{{post.data.alt}}" class="w3-image" style="width: 100%; height: 300px; object-fit: cover;">
        </a>
        </div>
        {% endif %} 
      </div>
      <!-- body -->
      <div class="w3-container">
        <h1>{{ post.data.title }}</h1>
        {% if post.data.date %}<span class="w3-text-grey"> {{ post.data.date | postDate }}</span>{% endif %}
        {% if post.data.tags %}
          {% for tag in post.data.tags %}
            {% if tag !== 'posts' %}<span> • {{ tag }}</span>{% endif  %}
          {% endfor %}
        {% endif %}
        
        {% if post.data.summary %}
          {{ post.data.summary | markdown | safe }}
        {% endif %}
        <p><a href="{{ post.page.url }}" class="w3-text-grey">Read More →</a></p>
      </div>
    </div>
  {%- endfor -%}

</div>
 
