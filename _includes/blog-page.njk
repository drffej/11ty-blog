---
layout: base.njk


---
<style>
.hero-image {
  background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url("/assets/images/11ty-syntax-hero.jpg");
  height: 350px;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  position: relative;
}

.blog-banner img {
  width: 100%;
  height: auto;
  display: block;
  object-fit: cover;
  max-height: 400px;
}
</style>
{% if image %}
    <div class="blog-banner">
    <img src="{{image}}" alt="{{alt}}" class="w3-image" style="width: 100%; height: 300px; object-fit: cover;">
          
    </div>
{% endif %}
<div class="w3-container w3-content w3-padding-16" style="max-width:991px">


<h1>{{ title }}</h1>
<span class="w3-text-grey"> {{ page.date | postDate }}</span>
  {% for tag in tags %}
    {% if tag !== 'post' %}<span> â€¢ {{ tag }}</span>{% endif    %}
  {% endfor %}

{% if summary %}
{{ summary | markdown | safe }}
{% endif %}
{{ content | safe }}
  
</div>
